//@version=6
library("pjdhiro_bb_v6")

// =====================
// Bollinger Bands（basis, upper, lower をタプルで返す）
// =====================
export bb(float src, int length, float mult) =>
    int len     = math.max(length, 1)
    float basis = ta.sma(src, len)              // 中心線
    float dev   = mult * ta.stdev(src, len)     // 標準偏差×倍率
    [basis, basis + dev, basis - dev]           // ← タプル（配列風）で返す
